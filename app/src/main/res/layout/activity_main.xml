<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F3641"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sideDisplay"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="textEnd"
        android:textColor="#CCCCCC"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/output"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/output"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="70dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/buttons_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sideDisplay" />

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#2F3641"
        android:orientation="vertical"
        android:paddingVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            android:orientation="horizontal">



            <com.google.android.material.button.MaterialButton
                android:id="@+id/bttnArray"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:height="72dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="AC"
                android:textColor="#FAFAFA"
                android:textSize="20dp"
                app:backgroundTint="#8687A3"
                app:cornerRadius="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bttnDecimal"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"

                android:height="72dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="^"
                android:textColor="#FAFAFA"
                android:textSize="35dp"
                app:backgroundTint="#8687A3"
                app:cornerRadius="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bttnComma"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"

                android:height="72dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text=" "
                android:textColor="#FAFAFA"
                android:textSize="35dp"
                app:backgroundTint="#8687A3"
                app:cornerRadius="50dp"
                app:icon="@android:drawable/ic_input_delete" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bttnCloseSquare"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:height="72dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:shadowColor="@color/black"
                android:shadowRadius="90"
                android:text="/"
                android:textColor="#FAFAFA"
                android:textSize="35dp"
                app:backgroundTint="#8687A3"
                app:cornerRadius="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bttn7"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:height="72dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="7"
                android:textColor="#FAFAFA"
                android:textSize="35dp"
                android:background="@drawable/button_digits"
                app:cornerRadius="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bttn8"
                android:background="@drawable/button_digits"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:height="72dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="8"
                android:textColor="#FAFAFA"
                android:textSize="35dp"
                app:cornerRadius="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bttn9"
                android:background="@drawable/button_digits"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:height="72dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="9"
                android:textColor="#FAFAFA"
                android:textSize="35dp"

                app:cornerRadius="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bttnMul"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"

                android:height="72dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="*"
                android:textColor="#FAFAFA"
                android:textSize="35dp"
                app:backgroundTint="#8687A3"
                app:cornerRadius="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bttn4"
                android:background="@drawable/button_digits"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:height="72dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="4"
                android:textColor="#FAFAFA"
                android:textSize="35dp"

                app:cornerRadius="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bttn5"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:height="72dp"
                android:background="@drawable/button_digits"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="5"
                android:textColor="#FAFAFA"
                android:textSize="35dp"
                app:cornerRadius="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bttn6"
                android:background="@drawable/button_digits"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:height="72dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="6"
                android:textColor="#FAFAFA"
                android:textSize="35dp"

                app:cornerRadius="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bttnPlus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:height="72dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="+"
                android:textColor="#FAFAFA"
                android:textSize="35dp"
                app:backgroundTint="#8687A3"
                app:cornerRadius="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bttn1"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:height="72dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="1"
                android:textColor="#FAFAFA"
                android:textSize="35dp"
                android:background="@drawable/button_digits"
                app:cornerRadius="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bttn2"
                android:background="@drawable/button_digits"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:height="72dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="2"
                android:textColor="#FAFAFA"
                android:textSize="35dp"

                app:cornerRadius="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bttn3"
                android:background="@drawable/button_digits"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:height="72dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="3"
                android:textColor="#FAFAFA"
                android:textSize="35dp"
                app:cornerRadius="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMin"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"

                android:height="72dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="-"
                android:textColor="#FAFAFA"
                android:textSize="35dp"
                app:backgroundTint="#8687A3"
                app:cornerRadius="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/bttnOpenSquare"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"

                android:height="72dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="Ans"
                android:textColor="#FAFAFA"
                android:textSize="17.2dp"
                app:backgroundTint="#8687A3"
                app:cornerRadius="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bttn0"
                android:background="@drawable/button_digits"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:height="72dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="0"
                android:textColor="#FAFAFA"
                android:textSize="35dp"
                app:cornerRadius="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bttnDel"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:height="72dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="."
                android:textColor="#FAFAFA"
                android:textSize="32dp"
                app:backgroundTint="#8687A3"
                app:cornerRadius="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEquals"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:height="72dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="="
                android:textColor="@color/black"
                android:textSize="32dp"
                app:backgroundTint="@color/white"
                app:cornerRadius="50dp"/>

        </LinearLayout>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnHistory"
        android:layout_width="70dp"
        android:layout_height="47dp"
        android:layout_marginBottom="400dp"
        android:background="#DF660B"
        android:backgroundTint="#DF660B"
        android:text="history"
        app:cornerRadius="10dp"
        app:icon="@android:drawable/ic_menu_recent_history"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07999998" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnArray"
        android:layout_width="104dp"
        android:layout_height="47dp"
        android:layout_marginBottom="400dp"
        android:background="#DF660B"
        android:backgroundTint="@color/Cathy"
        android:text="Array"
        app:cornerRadius="10dp"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />


</androidx.constraintlayout.widget.ConstraintLayout>